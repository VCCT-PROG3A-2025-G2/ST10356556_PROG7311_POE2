@model List<Agri_Energy_Connect.Models.Farmer>
@{
    ViewBag.Title = "Employee Dashboard";
    var email = ViewBag.EmployeeEmail;
}

<div class="dashboard-container">
    <div class="dashboard-header">Welcome, @email</div>

    <div class="card-grid">
        <div class="dashboard-card">
            <h3>Add Farmer</h3>
            <p>Create a new farmer profile with location and contact details.</p>
            <a class="btn-link" href="@Url.Action("AddFarmer", "Employee")">Add Farmer</a>
        </div>

        <div class="dashboard-card">
            <h3>View Farmer Products</h3>
            <p>Search and filter products submitted by all registered farmers.</p>
            <a class="btn-link" href="@Url.Action("ViewProducts", "Employee")">View Products</a>
        </div>
    </div>

    <hr />

    <div class="dashboard-header" style="margin-top: 30px;">Registered Farmers</div>

    @if (Model.Count == 0)
    {
        <p>No farmers have been added yet.</p>
    }
    else
    {
        <table class="farmer-table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Location</th>
                    <th>Contact</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var farmer in Model)
                {
                    <tr>
                        <td>@farmer.FullName</td>
                        <td>@farmer.Email</td>
                        <td>@farmer.Location</td>
                        <td>@farmer.Contact</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
